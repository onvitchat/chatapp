<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".chat.GroupMessageActivity">

    <RelativeLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/chat"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_back_arrow_back_black_24dp"
            android:layout_alignParentStart="true"
            android:paddingStart="15dp"/>
        <TextView
            android:id="@+id/chatitem_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:maxWidth="200dp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="채팅방이름"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_toEndOf="@+id/back_arrow"/>
        <TextView
            android:id="@+id/chat_p_count"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            tools:text="20명"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_toEndOf="@id/chatitem_textview_title"/>
        <ImageView
            android:id="@+id/chat_option"
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_menu_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/groupMessageActivity_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/chat_linear_layout"
        android:layout_below="@id/toolbar_layout"
        android:background="#DBE1EF" />
    <RelativeLayout
        android:id="@+id/groupMessageActivity_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/chat_linear_layout"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:background="#E6FFFFFF"
        android:visibility="gone">
        <ImageView
            android:id="@+id/rel_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="이름"
            android:textSize="18sp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:textColor="#8C8C8C"
            android:layout_toRightOf="@+id/rel_img"/>
        <TextView
            android:id="@+id/text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="메세지"
            android:textSize="18sp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="2dp"
            android:textColor="#000000"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/text_name"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/chat_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@android:color/background_light">

        <TextView
            android:id="@+id/send_files_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="+"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/groupMessageActivity_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/send_files_btn"
            android:layout_toStartOf="@id/groupMessageActivity_button"
            android:scrollbars="vertical"
            android:maxLines="5"/>
        <Button
            android:id="@+id/groupMessageActivity_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="전송" />
    </RelativeLayout>
</RelativeLayout>